<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.allesin1app">

    <application
        android:name=".GlobalVars"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".song.SongActivity"
            android:label="@string/title_activity_song"
            android:parentActivityName=".album.AlbumActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.allesin1app.album.AlbumActivity" />
        </activity>
        <activity
            android:name=".album.AlbumAddActivity"
            android:label="@string/title_add_album"
            android:parentActivityName=".album.AlbumListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.allesin1app.album.AlbumListActivity" />
        </activity>
        <activity
            android:name=".album.AlbumActivity"
            android:label="@string/title_activity_album"
            android:parentActivityName=".album.AlbumListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.allesin1app.album.AlbumListActivity" />
        </activity>
        <activity
            android:name=".album.AlbumListActivity"
            android:label="@string/title_activity_album_list"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.allesin1app.MainActivity" />
        </activity>
        <activity
            android:name=".song.SongAddActivity"
            android:label="@string/title_activity_song_list"
            android:parentActivityName=".album.AlbumActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.allesin1app.album.AlbumActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>